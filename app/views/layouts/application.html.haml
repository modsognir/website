%html
  %head
    %title Modsognir
    %meta{:name => "description", :content => "Ruby on Rails Web developer based in Canberra, Australia"}
    %meta{:name => "keywords", :content => "jaredfraser, jared fraser, modsognir, ruby on rails, web, web development, web developer, ruby, rails, canberra, australia"}
    %meta{"http-equiv" => "Content-Type", :content => "text/html; charset=utf-8" }
